<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="collagestudio.photocollage.collagemaker.activity.SingleEditor">

    <FrameLayout
        android:id="@+id/toplayar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/navgradient">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="110dp"
            android:paddingLeft="110dp"
            android:text="Edit"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center"
            />
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="end|center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="saveImg"
            android:background="@drawable/ripple">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_small_download_white"
                android:padding="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Save"
                android:layout_gravity="end|center_vertical"

                android:gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
       <LinearLayout
           android:layout_width="110dp"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:clickable="true"
           android:focusable="true"
           android:onClick="retry"
           android:layout_gravity="center_vertical"
           android:gravity="center_vertical"
           android:background="@drawable/ripple">

           <ImageView
               android:layout_width="25dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:padding="2dp"
               android:src="@drawable/ic_refresh" />
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:text="Retry"
               android:layout_gravity="start|center_vertical"
               android:gravity="center_vertical"

               android:textColor="@android:color/white" />
       </LinearLayout>




    </FrameLayout>
    <ImageView
        android:id="@+id/single_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"/>
    <FrameLayout
        android:id="@+id/adsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"></FrameLayout>
</LinearLayout>