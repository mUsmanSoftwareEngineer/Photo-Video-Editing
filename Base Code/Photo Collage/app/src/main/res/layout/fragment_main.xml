<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finz_bg_screen"
    android:weightSum="1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:weightSum="1"
        android:layout_margin="16dp"
        android:background="@drawable/navgradient"
        android:padding="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/finz_appname" />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="0.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:background="@drawable/ripple"
                android:src="@drawable/finz_main_camerabtn" />
            <ImageView
                android:layout_weight="0.35"
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:onClick="openCamera"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/finz_main_camerabtn" />
            <!--                android:background="@drawable/ripple"-->

            <ImageView
                android:layout_weight="0.25"
                android:id="@+id/frameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                android:layout_marginBottom="0dp"
                android:padding="18dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/finz_main_btn_grids" />




        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gallaryButton"
                android:layout_weight="0.35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:onClick="openGallary"
                android:paddingTop="8dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/finz_main_btn_gallery" />
            <ImageView
                android:layout_weight="0.35"
                android:id="@+id/photoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="30dp"
                android:src="@drawable/finz_main_btn_scrapbook" />
            <ImageView
                android:layout_weight="0.33"
                android:id="@+id/imageTemplateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="0dp"
                android:src="@drawable/finz_main_btn_templates" />




        </LinearLayout>

    </LinearLayout>


</LinearLayout>