<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/thumbnailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="top"
        android:src="@drawable/photo_editor_ic_launcher"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B303A9F4"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Endwar"
            android:paddingRight="0dp"
            android:paddingLeft="8dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/photo_editor_store_item_title_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="10 filters"
            android:textColor="#ffffff"
            android:textSize="@dimen/photo_editor_store_item_item_count_title_size"/>

    </LinearLayout>
</FrameLayout>